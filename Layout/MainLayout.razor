@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider Theme="_theme" @bind-IsDarkMode="_isDarkMode" />

<MudPopoverProvider />

<div class="page">
    <Sidebar />
    <div class="content">
        <AppBar IsDarkMode="_isDarkMode" OnThemeToggle="ToggleThemeTest" />
        <main class="main-content">
            @Body
        </main>
    </div>
</div>

@code {
    private bool _isDarkMode;
    private void ToggleThemeTest()
    {
        _isDarkMode = !_isDarkMode;
    }

    private MudTheme _theme = new MudTheme()
    {
        PaletteLight = new PaletteLight
        {
            Primary = Colors.Purple.Default,
            Background = "#ffffff"
        },
        PaletteDark = new PaletteDark
        {
            Primary = Colors.Orange.Default,
            Background = "#121212"
        }
    };
}
