<div Class="bank-card">
    <div class="bank-card-header">
        <MudIcon Icon="@Icons.Material.Filled.MonetizationOn" Size="Size.Large" Class="bank-avatar" />
        <div class="bank-card-title">@BankName</div>
    </div>
    <div class="bank-card-time-row">
        <MudIcon Icon="@Icons.Material.Filled.AccessTime" Size="Size.Small" Class="bank-time-icon" />
        <span class="bank-card-time">@Time</span>
        <span class="bank-card-thin" style="margin-left:14px;">Покупка</span>
        <span class="bank-card-thin" style="margin-left:18px;">Продажа</span>
    </div>
    <MudDivider />

    @foreach (var currency in Currencies)
    {
        <div class="bank-card-currency-row">
            <span class="currency-cell">
                <MudAvatar Image="@currency.FlagUrl" Size="Size.Small" /> @currency.Code
            </span>
            <span class="rate-cell">@currency.Buy</span>
            <span class="rate-cell">@currency.Sell</span>
        </div>
    }
</div>

@code {
    [Parameter] public string BankName { get; set; }
    [Parameter] public string Time { get; set; }
    [Parameter] public List<CurrencyInfo> Currencies { get; set; }

    public class CurrencyInfo
    {
        public string FlagUrl { get; set; }
        public string Code { get; set; }
        public string Buy { get; set; }
        public string Sell { get; set; }
    }
}
